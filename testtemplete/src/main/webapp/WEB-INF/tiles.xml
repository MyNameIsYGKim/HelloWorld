  <definition name="WILDCARD:admin/*/*" extends="admin.homepage">
  	<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
  </definition>
  
  <definition name="WILDCARD:*/*" extends="user.homepage">
  	<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
  </definition>
  
