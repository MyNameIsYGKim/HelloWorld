<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.micol.lms.member.map.MemberMapper">
	<select id="memberSelectList"
		resultType="co.micol.lms.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>

	<select id="memberSelect"
		parameterType="co.micol.lms.member.service.MemberVO"
		resultType="co.micol.lms.member.service.MemberVO">
		
		SELECT * FROM MEMBER WHERE MEMBER_ID = #{memberId} <!-- ${ (table명) }도 가능 -->
		<if test="memberPassword != null">
			AND MEMBER_PASSWORD = #{memberPassword}
		</if>
	</select>

	<insert id="memberInsert"
		parameterType="co.micol.lms.member.service.MemberVO">
		INSERT INTO MEMBER
		VALUES(#{memberId}, #{memberPassword},
		#{memberName}, #{memberAge}, #{memberGender}, #{memberTell},
		#{memberAddress})
	</insert>

	<delete id="memberDelete"
		parameterType="co.micol.lms.member.service.MemberVO">
		DELETE FROM MEMBER WHERE MEMBER_ID = #{memberId}
	</delete>

	<update id="memberUpdate">

	</update>

</mapper>